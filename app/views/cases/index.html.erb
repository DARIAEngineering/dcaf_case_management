<div class="container">
  <div class="col-md-12">

    <div id="overview">
      <h4>Week of August 24 - 31</h4>
      <div class="progress">
        <div class="progress-bar progress-bar-success" style="width: 35%">
          <span class="sr-only">35% Complete (success)</span>
        </div>
        <div class="progress-bar progress-bar-warning progress-bar-striped" style="width: 20%">
          <span class="sr-only">20% Complete (warning)</span>
        </div>
        <div class="progress-bar progress-bar-danger" style="width: 10%">
          <span class="sr-only">10% Complete (danger)</span>
        </div>
      </div>
    </div>


    <div id="call_list_builder">
      <h4>Build your call list <small>today's voicemails below</small></h4>

      <form action="" id="call_list_builder_form" method="POST" class="form-horizontal" role="form">
        <div class="form-group">
          <div class="col-sm-10">
            <input type="text" name="" id="input" class="form-control col-sm-9" value="" required="required" pattern="" title="" placeholder="name or phone">
          </div>
          <div class="col-sm-2">
            <span class="glyphicon glyphicon-search" aria-hidden="true"></span>
          </div>
        </div>
      </form>
    </div>

    <div id="call_list">
      <h4>Your Call List</h4>
      <table class="table table-bordered">
        <tr>
          <th>Phone</th>
          <th>Name</th>
          <th>LMP</th> <!-- last menstrual period -->
          <th>Case Notes</th>
          <th></th>
        </tr>
        <tr>
          <td>202-345-6677</td>
          <td>Milly G</td>
          <td>17 weeks</td>
          <td>(sample case notes. something or other. detail)</td>
          <td><span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span></td>
        </tr>
        <tr>
          <td>202-345-6677</td>
          <td>Susan B</td>
          <td>12 weeks</td>
          <td>(sample case notes. something or other. detail)</td>
          <td><span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span></td>
        </tr>
        <tr>
          <td>202-345-6677</td>
          <td>Patty W</td>
          <td>9 weeks</td>
          <td>(sample case notes. something or other. detail)</td>
          <td><span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span></td>
        </tr>
      </table>
    </div>

    <div id="urgent_cases">
      <h4>Urgent Cases</h4>
      <table class="table table-bordered">
        <tr>
          <th>Phone</th>
          <th>Name</th>
          <th>LMP</th> <!-- last menstrual period -->
          <th>Case Notes</th>
          <th></th>
        </tr>
        <% @urgent_cases.each do |c| %>
        <tr>
          <td><%= c.patient.primary_phone %></td>
          <td><%= c.patient.name %></td>
          <td><%= "#{(DateTime.now - c.last_menstrual_period_time).to_i/7} weeks" %></td>
          <td>(sample case notes. something or other. detail)</td>
          <td><%= link_to "Call", "#call-#{c.patient.primary_phone}", data: {toggle: "modal"} %></td>
          <%= render partial: 'calls/new_call', locals: {c: c} %>
        </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>

<%= render 'patients/new_patient' %>
