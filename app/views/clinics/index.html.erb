<h1>Clinics</h1>
<p><%= link_to 'Add a new clinic', new_clinic_path %></p>

<table class="table table-hover" id='clinics_table'>
  <tr>
    <th>Clinic name</th>
    <th>Address</th>
    <th>City</th>
    <th>State</th>
    <th>ZIP</th>
    <th>NAF</th>
    <th>Medicaid</th>
    <th>Gestational Limit (Days)</th>
  </tr>

  <% @clinics.each do |clinic| %>
    <tr>
      <td><%= link_to clinic.name, edit_clinic_path(clinic) %></td>
      <td><%= clinic.street_address %></td>
      <td><%= clinic.city %></td>
      <td><%= clinic.state %></td>
      <td><%= clinic.zip %></td>
      <td>
        <div class="accepts-naf clinic-detail-group">
          <p class="blush"><%= clinic.accepts_naf ? 'Yes' : 'No' %></p>
        </div>
      </td>
      <td>
        <div class="accepts_medicaid clinic-detail-group">
          <p class="blush"><%= clinic.accepts_medicaid ? 'Yes' : 'No' %></p>
        </div>
      </td>
      <td>
        <div class="gestational-limit clinic-detail-group">
          <p class="blush"><%= clinic.gestational_limit %></p>
        </div>
      </td>
    </tr>
  <% end %>
</table>
