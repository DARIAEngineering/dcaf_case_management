<div id="overview" class="margin-bottom">
  <h1 class="border-bottom title">
    <%= t 'dashboard.overview.budget_for', date_range: date_range %>
    <%= dashboard_table_content_tooltip_shell "budget_bar" %>
  </h1>

  <div id="budget_bar">
    <%= render_async budget_bar_path, html_options: { nonce: true, 'data-turbolinks-track': 'reload' }, event_name: 'render_async_loaded'  %>
  </div>
</div>

<%= javascript_tag nonce: true do %>
  document.addEventListener("render_async_loaded", function (event) {
    $('.expenditure-item').popover();
  });
<% end %>
