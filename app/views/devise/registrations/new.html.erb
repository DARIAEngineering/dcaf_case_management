<div class='authform'>
  <h3>Sign up</h3>
  <%= bootstrap_form_with model: resource, local: true, as: resource_name, url: registration_path(resource_name) do |f| %>
    <%= render "devise/shared/error_messages" %>
    <%= f.email_field :email, autofocus: true %>
    <%= f.text_field :name %>
    <%= f.password_field :password, autocomplete: 'off', label: "Password (#{@minimum_password_length || 8} characters minimum)" %>
    <%= f.password_field :password_confirmation, autocomplete: 'off' %>
    <%= f.submit "Sign up", class: 'btn btn-primary' %>
  <% end %>
  <%= render "devise/shared/links" %>
</div>
