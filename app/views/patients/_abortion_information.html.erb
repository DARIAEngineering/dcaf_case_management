<section id="abortion_information_content">
  <div id="patient_fields" class="col-sm-12">
    <div class="row">
      <div class="col-sm-12">
        <h2><%= t('patient.abortion.title') %></h2>
      </div>
    </div>

    <div class="row">
      <div class="col-sm-12 info-form">
        <h3><%= t('patient.abortion.clinic_section.title') %></h3>
        <%= bootstrap_form_for patient, html: { id: 'abortion-information-form-1' }, remote: true do |f| %>
          <div class="col-sm-6">
            <div class="info-form-left">
              <%= f.select :clinic_id,
                options_for_select(clinic_options, patient.clinic.try(:id)),
                label: t('patient.abortion.clinic_section.clinic') %>
              <div class="checkbox">
                <%= label_tag 'naf_filter' do %>
                  <%= check_box_tag 'naf_filter' %>
                  <%= t('patient.abortion.clinic_section.naf_only_toggle') %>
                <% end %>
              </div>
              <div class="checkbox">
                <%= label_tag 'medicaid_filter' do %>
                  <%= check_box_tag 'medicaid_filter' %>
                  <%= t('patient.abortion.clinic_section.medicaid_only_toggle') %>
                <% end %>
              </div>
            </div>
          </div>

          <div class="col-sm-6">
            <div class="info-form-right">
              <%= f.check_box :resolved_without_fund, 
                label: t('patient.abortion.clinic_section.resolved_without_fund', fund: "#{FUND}"),
                              label_class: 'tooltip-header-checkbox',
                              data: { 'tooltip-text': resolved_without_fund_help_text } %>
              <%= f.check_box :referred_to_clinic,
                              label: t('patient.abortion.clinic_section.referred_to_clinic'),
                              label_class: 'tooltip-header-checkbox',
                              data: { 'tooltip-text': referred_to_clinic_help_text } %>
              <%= f.check_box :completed_ultrasound,
                              label: t('patient.abortion.clinic_section.ultrasound_completed'),
                              label_class: 'tooltip-header-checkbox',
                              data: { 'tooltip-text': mandatory_ultrasound_help_text } %>
            </div>
          </div>
        <% end %>
      </div>
    </div>

    <div class="row col-md-12 clinic_finder_container">
      <%= render 'clinicfinders/search_form' %>
    </div>
  </div>

  <div id="cost_fields" class="col-sm-12">
    <div class="row">
      <div class="col-sm-12">
        <h3><%= t('patient.abortion.cost_section.title') %></h3>
      </div>
    </div>

    <div class="row col-sm-12" >
      <div class="patient_cost_fields">
        <%= bootstrap_form_for patient, html: { id: 'abortion-information-form-2' }, remote: true do |f| %>
          <div class="col-sm-6">
            <%= f.number_field :procedure_cost, label: t('patient.abortion.cost_section.abortion_cost'), autocomplete: 'off', prepend: '$' %>
            <div class="info-form-left form-group outstanding-balance-ctn hidden">
              <label class="control-label"><%= t('patient.abortion.cost_section.outstanding_balance') %></label>
              <div id="outstanding-balance"></div>
            </div>
          </div>

          <div class="col-sm-6">
            <div id="pledge-contributions">
              <%= f.number_field :patient_contribution, label: t('patient.abortion.cost_section.patient_contribution'), autocomplete: 'off', prepend: '$' %>
              <%= f.number_field :naf_pledge, label: t('patient.abortion.cost_section.NAF_pledge'), autocomplete: 'off', prepend: '$' %>
              <%= f.number_field :fund_pledge, label: t('patient.abortion.cost_section.fund_pledge', fund: "#{FUND}"), autocomplete: 'off', prepend: '$', label_class: 'tooltip-header-input', data: { 'tooltip-text' => pledge_limit_help_text_options.join("<br />") } %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <div id="external_pledges" class="col-sm-12">
    <div class="row col-sm-12">
      <div class="col-sm-6">
        <!-- Future right of math -->
      </div>

      <div class="col-sm-6">
        <%= render partial: 'external_pledges/external_pledges_table', locals: { patient: patient, external_pledges: patient.external_pledges.order_by('created_at desc') } %>

        <div id="new-external-pledge">
          <%= render partial: 'external_pledges/new', locals: { patient: patient, new_external_pledge: new_external_pledge } %>
        </div>
      </div>
    </div>
  </div>
</section>
