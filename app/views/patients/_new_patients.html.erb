<h3><small>Your search produced no results, so add a new patient:</small></h3>

<%= bootstrap_form_for patient do |f| %>
  <div class="col-md-3">
    <div class="col-md-6">
      <%= patient.text_field :primary_phone, label: 'Phone', value: phone %>
    </div>
    <div class="col-md-6">
      <%= patient.text_field :name, label: 'Name', value: name %>
    </div>
  </div>

  <%= f.fields_for patient.pregnancy do |p| %>
    <div class="col-md-3">
      <div class="col-md-6">
        <%= p.select :last_menstrual_period_weeks, options_for_select(weeks_options, patient.pregnancy.last_menstrual_period_weeks ), label: 'LMP', autocomplete: 'off' %>
      </div>
      <div class="col-md-6 hide-label">
        <%= p.select :last_menstrual_period_days, options_for_select(days_options, patient.pregnancy.last_menstrual_period_days ), label: 'LMP', autocomplete: 'off' %>
      </div>
    </div>
  <% end %>

  <div class="col-md-2">
    <%= f.date_field :initial_call_date, label: "Initial Call Date", value: today,  required: "required" %>
  </div>

  <div class="col-sm-2">
    <%= f.select :voicemail_preference, 
                 options_for_select(voicemail_options) %>
  </div>

  <div class="col-sm-2">
    <br>
    <%= button_tag class: 'btn btn-primary', id: 'create_new_patient_button' do %>
       <span class='glyphicon glyphicon-plus-sign'></span> Create new patient
    <% end %>
  </div>
<% end %>

<script>$('[data-toggle="toggle"]').bootstrapToggle();</script>
