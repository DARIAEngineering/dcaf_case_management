<!-- Patient Info -->

<%= render partial: "pledge", locals: { pregnancy: @pregnancy } %>

<div id="patient_dashboard" class="row">
  <%= render partial: 'patients/patient_dashboard', locals: { pregnancy: @pregnancy } %>
</div>

<div id="patient_detail" class="row">
  <div class="col-sm-4">
    <div id="menu" class="col-sm-9">
      <%= render partial: 'patients/menu', locals: { pregnancy: @pregnancy } %>
    </div>
  </div>

  <div id="sections" class="col-sm-8 tab-content">
    <%= render partial: 'patients/abortion_information', locals: { pregnancy: @pregnancy } %>
    <%= render partial: 'patients/patient_information', locals: { pregnancy: @pregnancy } %>
    <%= render partial: 'patients/change_log', locals: { pregnancy: @pregnancy } %>
    <%= render partial: 'patients/call_log', locals: { pregnancy: @pregnancy } %>
    <%= render partial: 'patients/notes', locals: { pregnancy: @pregnancy, note: @note } %>
  </div>
</div>
