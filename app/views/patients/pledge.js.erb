$('.modal-content').html(
  '<%= escape_javascript(render partial: "patients/pledge",
                                locals: { patient: @patient,
                                          disable_next: disable_continue?(@patient) }) %>'
);

<% if (!@patient.pledge_sent) %>
  $('.modal').modalSteps();
<% else %>
  $('#cancel-pledge-form').on('submit', function() {
    $('.modal').modal('hide');
  })
<% end %>

$('.modal').modal('toggle');

// This is a small hack to prevent the js-title-step
// from repeating in the modal on multiple toggles.
$('.js-title-step').contents().slice(2).remove();
