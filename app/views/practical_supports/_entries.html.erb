<% if patient.practical_supports.present? %>
  <table class="table border-side" id="practical-support-table">
    <thead>
      <tr>
        <th scope="col">Detail</th>
        <th scope="col">Notes</th>
        <th scope="col"><!-- update --></th>    
      </tr>
    </thead>

    <tbody id="practical-support-content">
      <% patient.practical_supports.each do |entry| %>
        <tr id="practical-support-row-#{entry.id}">
          <td class="practical-support-display-text">
            <%= practical_support_display_text entry %>
          </td>
  
          <td class="practical-support-note-preview">
            <%= entry.most_recent_note_display_text %>
          </td class="practical-support-edit">

          <td>
            <%= link_to t('common.update'),
                        edit_patient_practical_support_path(patient, entry),
                        class: "btn btn-info btn-sm edit_practical_support practical-support-#{entry.id}",
                        remote: true %>  
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <hr />
  <br />
<% end %>
