          <th>Changed From</th>
          <th>Changed To</th>
          <th>CM</th>
        </tr>
      </thead>
      <tbody>
        <% pregnancy.clinic.history_tracks.each do |revision| %>
          <tr>
            <td><%= revision.created_at.display_date %></td>
            <td><%= revision.tracked_changes_fields %></td>
            <td><%= revision.tracked_changes_from %></td>
            <td><%= revision.tracked_changes_to %></td>
            <td><%= updated_by_user(revision) %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</section>
