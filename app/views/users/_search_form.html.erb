<%= bootstrap_form_with url: users_search_path,
                        remote: true,
                        layout: :inline,
                        html: { class: 'float-right' } do |p| %>
  <%= p.text_field :search,
                   placeholder: t('user.search.text_field'),
                   skip_label: true,
                   id: 'search_field',
                   class: 'search_form_input' %>
  <%= p.submit t('user.search.button'),
               id: 'search_button',
               class: 'btn btn-primary ml-2' %>
<% end %>
